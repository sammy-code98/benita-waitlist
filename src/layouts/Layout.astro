---
import "../styles/global.css";
import Navigation from "@components/globals/Navigation.astro";
import Footer from "@components/globals/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Benita</title>
  </head>
  <body class="w-full m-0 min-h-screen overflow-hidden flex flex-col">
    <Navigation />
    <main
      class="flex justify-center items-center flex-1 py-2 px-8 overflow-auto"
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
